<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.bloqueasitios.probe</string>

    <key>ProgramArguments</key>
    <array>
      <string>/usr/bin/python3</string>
      <string>/Library/Application Support/BloqueaSitios/bloqueasitios_probe.py</string>
      <string>/Library/Application Support/BloqueaSitios/config.json</string>
      <string>/Library/Application Support/BloqueaSitios/state.json</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <!-- Run every minute to react quickly to calendar boundaries. -->
    <key>StartInterval</key>
    <integer>60</integer>

    <key>StandardOutPath</key>
    <string>/tmp/bloqueasitios-probe.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/bloqueasitios-probe.err.log</string>
  </dict>
</plist>


